page {
  height: 100%;
  background: #EFEFF4;
  position: relative;
}

.img-container {
  display: flex;
  height: 100%;
  padding: 0 128rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.btn {
  position: absolute;
  bottom: 32rpx;
  width: calc(100% - 48rpx);
  margin: 0 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #FC3B40;
  border-radius: 64rpx;
  font-size: 32rpx;
  color: #FFF;
}