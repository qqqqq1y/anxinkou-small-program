page {
  position: relative;
  height: 100%;
  background: #eeeeee;
}

.times-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.info {
  width: 100%;
}

.col {
  margin-top: 24rpx;
  padding: 0 24rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  font-size: 30rpx;
  color: #333;
}

.lab {
  margin-right: 24rpx;
}

.val {
  flex: 1;
  height: 100%;
  border-bottom: 1px solid #1A1E27;
}

.date {
  display: flex;
  justify-content: space-between;
  padding: 0 12rpx;
}

.ipt {
  height:100%;
  text-align: center;
  line-height:88rpx;
}

.note {
  margin-top: 64rpx;
  display: flex;
  padding: 0 12rpx;
  font-size: 30rpx;
  color: #686B72;
}

.btn-group {
  width: 100%;
  position: absolute;
  bottom: 64rpx;
  display: flex;
  padding: 0 24rpx;
  justify-content: space-between;
}

.btn {
  padding: 8rpx 36rpx;
  border-radius: 10rpx;
  background: #FC3B40;
  font-size: 30rpx;
  color: #FFF;
}

.van-toast {
  white-space: nowrap !important;
}
